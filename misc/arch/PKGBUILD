# Maintainer: Lukas BÃ¶ger <dev [at] lboeger [dot] de>

pkgname=tsym-git
pkgver=0.0
pkgrel=1

pkgdesc="A tiny symbolic C++ library"
arch=('i686' 'x86_64')
license=('custom')

options=('!strip')

source=("${pkgname%-git}::git+file://${PWD}/../..")
md5sums=('SKIP')

makedepends=('git' 'scons' 'trlog')
provides=(${pkgname%-git})
conflicts=(${pkgname%-git})

pkgver() {
    cd "${srcdir}/${pkgname%-git}"

    echo -n 'g'

    git log -1 --pretty=format:'%h'
}

build() {
    cd "${srcdir}/${pkgname%-git}"

    unset CC CXX CFLAGS CXXFLAGS

    scons --no-coverage lib
}

package() {
    cd "${srcdir}/${pkgname%-git}"

    unset CC CXX CFLAGS CXXFLAGS

    scons --no-coverage --prefix="${pkgdir}/usr" install

    install -m644 -D LICENSE "${pkgdir}/usr/share/licenses/${pkgname}/LICENSE"
}

